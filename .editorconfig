# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON, YAML, Markdown
[*.{ts,tsx,js,jsx,json,yml,yaml,md}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
